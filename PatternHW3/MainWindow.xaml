<Window x:Class="PatternHW3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PatternHW3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <CheckBox x:Name="useDropboxCheckbox" Content="Use Dropbox" Checked="UseDropboxCheckbox_Checked" />
            <Button Content="Upload File" Click="UploadFileButton_Click" Margin="0 10 0 0"/>
        </StackPanel>
    </Grid>
</Window>
